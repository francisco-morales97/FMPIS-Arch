#!/bin/sh

# Definición de variables
GREEN="\033[0;32m"
BOLD="\033[1m"
NC="\033[0m"

# Inicio del script
printf "${BOLD}Copiando archivos de configuración...${NC}\n"

# cp -rf $XDG_CONFIG_HOME/alacritty ~/FMPIS-Arch/configs/xdg_config_home/
cp -rf ~/.local/bin ~/FMPIS-Arch/configs/
cp -rf $XDG_CONFIG_HOME/mpv ~/FMPIS-Arch/configs/xdg_config_home/
cp -rf $XDG_CONFIG_HOME/nvim ~/FMPIS-Arch/configs/xdg_config_home/
cp -rf $XDG_CONFIG_HOME/cmus ~/FMPIS-Arch/configs/xdg_config_home/
cp -rf $XDG_DATA_HOME/pass ~/FMPIS-Arch/configs/xdg_data_home/
cp $HOME/.zshenv ~/FMPIS-Arch/configs/
cp -rf $XDG_CONFIG_HOME/zathura ~/FMPIS-Arch/configs/xdg_config_home/
cp -rf $XDG_CONFIG_HOME/zsh ~/FMPIS-Arch/configs/xdg_config_home/
cp -rf $XDG_CACHE_HOME/zsh ~/FMPIS-Arch/configs/xdg_cache_home/
cp -rf $XDG_CONFIG_HOME/mangal ~/FMPIS-Arch/configs/xdg_config_home/

printf "${GREEN}${BOLD}Proceso finalizado${NC}\n"
